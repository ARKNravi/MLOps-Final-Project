{
    "version": 2,
    "buildCommand": "pip install -r requirements-deploy.txt",
    "builds": [
        {
            "src": "/script/app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9",
                "installCommand": "python -m pip install --upgrade pip && pip install -r requirements-deploy.txt --no-cache-dir"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/script/app.py"
        }
    ],
    "env": {
        "PYTHON_VERSION": "3.9",
        "PIP_TARGET": ".pip",
        "PYTHONPATH": "/var/task/.pip:/var/task/script"
    }
}
